# API Configuration
API_BASE_URL=http://localhost:3000
OPENAI_API_KEY=your_openai_api_key_here

# Processing Mode Configuration
# Options: openai, ollama, hybrid
PROCESSING_MODE=openai

# Ollama Configuration (used when PROCESSING_MODE=ollama or hybrid)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_TIMEOUT=120
OLLAMA_MAX_RETRIES=3
OLLAMA_MODEL_DOWNLOAD_TIMEOUT=600

# OAuth2/Ory Cloud Configuration
ORY_PROJECT_SLUG=your-ory-project-slug
OAUTH2_CLIENT_ID=your_oauth2_client_id_here
OAUTH2_CLIENT_SECRET=your_oauth2_client_secret_here
OAUTH2_SCOPE=read write

# Polling Configuration
POLLING_INTERVAL_SECONDS=30
CONCURRENCY_LIMIT=5

# Retry Configuration
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=2.0

# Timeout Configuration
REQUEST_TIMEOUT=30
OPENAI_TIMEOUT=60

# Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5

# Metrics
METRICS_PORT=8001

# Logging
LOG_LEVEL=INFO

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STRATEGY=rolling        # Options: rolling, fixed
RATE_LIMIT_STORAGE_PATH=/app/data/rate_limits.db

# Multi-Tier Rate Limits (0 = disabled)
# Example: Burst protection and long-term budgets
RATE_LIMIT_PER_MINUTE=20          # Burst protection (20 tasks/min)
RATE_LIMIT_PER_HOUR=100           # Hourly rate (100 tasks/hr)
RATE_LIMIT_PER_DAY=500            # Daily quota (500 tasks/day)
RATE_LIMIT_PER_WEEK=2000          # Weekly budget (2000 tasks/week)
RATE_LIMIT_PER_MONTH=7500         # Monthly budget (7500 tasks/month)