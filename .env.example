# API Configuration
API_BASE_URL=http://localhost:3000
OPENAI_API_KEY=your_openai_api_key_here

# Processing Mode Configuration
# Options: openai, ollama, hybrid
PROCESSING_MODE=openai

# Ollama Configuration (used when PROCESSING_MODE=ollama or hybrid)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_TIMEOUT=120
OLLAMA_MAX_RETRIES=3
OLLAMA_MODEL_DOWNLOAD_TIMEOUT=600

# OAuth2/Ory Cloud Configuration
ORY_PROJECT_SLUG=your-ory-project-slug
OAUTH2_CLIENT_ID=your_oauth2_client_id_here
OAUTH2_CLIENT_SECRET=your_oauth2_client_secret_here
OAUTH2_SCOPE=read write

# Polling Configuration
POLLING_INTERVAL_SECONDS=30
CONCURRENCY_LIMIT=5

# Retry Configuration
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=2.0

# Timeout Configuration
REQUEST_TIMEOUT=30
OPENAI_TIMEOUT=60

# Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5

# Metrics
METRICS_PORT=8001

# Logging
LOG_LEVEL=INFO